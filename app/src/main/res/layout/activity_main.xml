<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="haim.edu.androidlayout.MainActivity">




    <TextView
        android:id="@+id/tvResult"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="0."
        android:gravity="right"
        android:padding="16dp"
        android:textSize="50sp"
        android:background="#000"
        android:textColor="#fff"
        />

    <Button
        android:id="@+id/btnC"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:background="#a99393"
        android:textColor="#000"
        android:layout_below="@+id/tvResult"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="1dp"
        android:text="C"/>

    <Button
        android:id="@+id/btnPlBS"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:background="#a99393"
        android:textColor="#000"
        android:layout_below="@+id/tvResult"
        android:layout_toRightOf="@+id/btnC"
        android:layout_toEndOf="@+id/btnC"
        android:layout_margin="1dp"
        android:text="+/-"
        />

    <Button
        android:id="@+id/btnPrec"

        android:layout_below="@+id/tvResult"
        android:layout_toRightOf="@+id/btnPlBS"
        android:layout_toEndOf="@+id/btnPlBS"
        android:layout_margin="1dp"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="30sp"

        android:background="#a99393"
        android:textColor="#000"


        android:text="%"
        />

    <Button
        android:id="@+id/btnPrec"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:background="#a99393"
        android:textColor="#000"
        android:layout_below="@+id/tvResult"
        android:layout_toRightOf="@+id/btnPlBS"
        android:layout_toEndOf="@+id/btnPlBS"
        android:layout_margin="1dp"
        android:text="%"
        />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:background="#ec863e"
        android:textColor="#f7fffe"

        android:layout_below="@+id/tvResult"
        android:layout_toRightOf="@+id/btnPrec"
        android:layout_toEndOf="@+id/btnPrec"
        android:layout_margin="1dp"
        android:text="/"
        />

    <Button
        android:id="@+id/btn7"
        android:layout_alignLeft="@+id/btnC"
        android:layout_alignStart="@+id/btnC"
        android:layout_below="@+id/btnC"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:background="#c4adad"
        android:textColor="#000"
        android:layout_margin="1dp"
        android:text="7" />

    <Button
        android:id="@+id/btn8"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:layout_below="@+id/btnPlBS"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:background="#c4adad"
        android:textColor="#000"
        android:layout_margin="1dp"
        android:text="8"
        />

    <Button
        android:id="@+id/btn9"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:layout_below="@+id/btnPrec"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:background="#c4adad"
        android:textColor="#000"
        android:layout_margin="1dp"
        android:text="9"
        />

    <Button
        android:id="@+id/btnMult"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:background="#ec863e"
        android:textColor="#f7fffe"

        android:layout_below="@+id/btnDiv"
        android:layout_toRightOf="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:layout_margin="1dp"
        android:text="X"
        />


    <Button
        android:id="@+id/btn4"
        android:layout_alignLeft="@+id/btn7"
        android:layout_alignStart="@+id/btnC"
        android:layout_below="@+id/btn7"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:background="#c4adad"
        android:textColor="#000"
        android:layout_margin="1dp"
        android:text="4" />

    <Button
        android:id="@+id/btn5"
        android:layout_toRightOf="@+id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:layout_below="@+id/btn8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:background="#c4adad"
        android:textColor="#000"
        android:layout_margin="1dp"
        android:text="5"
        />

    <Button
        android:id="@+id/btn6"
        android:layout_toRightOf="@+id/btn5"
        android:layout_toEndOf="@+id/btn5"
        android:layout_below="@+id/btn9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:background="#c4adad"
        android:textColor="#000"
        android:layout_margin="1dp"
        android:text="6"
        />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:background="#ec863e"
        android:textColor="#f7fffe"

        android:layout_below="@+id/btnMult"
        android:layout_toRightOf="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:layout_margin="1dp"
        android:text="-"
        />


    <Button
        android:id="@+id/btn1"
        android:layout_alignLeft="@+id/btn7"
        android:layout_alignStart="@+id/btnC"
        android:layout_below="@+id/btn4"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:background="#c4adad"
        android:textColor="#000"
        android:layout_margin="1dp"
        android:text="1" />

    <Button
        android:id="@+id/btn2"
        android:layout_toRightOf="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:layout_below="@+id/btn5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:background="#c4adad"
        android:textColor="#000"
        android:layout_margin="1dp"
        android:text="2"
        />

    <Button
        android:id="@+id/btn3"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf="@+id/btn2"
        android:layout_below="@+id/btn6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:background="#c4adad"
        android:textColor="#000"
        android:layout_margin="1dp"
        android:text="3"
        />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:background="#ec863e"
        android:textColor="#f7fffe"

        android:layout_below="@+id/btnMinus"
        android:layout_toRightOf="@+id/btn3"
        android:layout_toEndOf="@+id/btn3"
        android:layout_margin="1dp"
        android:text="+"
        />



    <Button
        android:id="@+id/btn0"
        android:layout_alignParentStart="true"
        android:layout_toEndOf="@+id/btn1"
        android:layout_below="@+id/btn1"
        android:layout_width="203.5dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:background="#c4adad"
        android:textColor="#000"
        android:text="0"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/btnDot"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf="@+id/btn2"
        android:layout_below="@+id/btn3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:background="#c4adad"
        android:textColor="#000"
        android:text="."
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/btnCalc"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textSize="30sp"
        android:background="#ec863e"
        android:textColor="#f7fffe"
        android:layout_below="@+id/btnPlus"
        android:layout_toRightOf="@+id/btn3"
        android:layout_toEndOf="@+id/btn3"
        android:text="="
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
